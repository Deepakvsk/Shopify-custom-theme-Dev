<div class="zx-faq-wrapper">
  <h2>Frequently Asked Questions</h2>

  <div class="zx-faq-item">
    <button class="zx-faq-question">What is delivery time?</button>
    <div class="zx-faq-answer">Delivery takes 2-3 business days.</div>
  </div>

  <div class="zx-faq-item">
    <button class="zx-faq-question">Is there any warranty?</button>
    <div class="zx-faq-answer">Yes, 1 year warranty included.</div>
  </div>

  <div class="zx-faq-item">
    <button class="zx-faq-question">Do you offer support?</button>
    <div class="zx-faq-answer">24/7 customer support available.</div>
  </div>

</div>

<style>
.zx-faq-wrapper {
  padding: 60px 20px;
  max-width: 800px;
  margin: auto;
}

.zx-faq-wrapper h2 {
  text-align: center;
  margin-bottom: 30px;
}

.zx-faq-item {
  margin-bottom: 15px;
}

.zx-faq-question {
  width: 100%;
  padding: 15px;
  background: #f5f5f5;
  border: none;
  cursor: pointer;
  text-align: left;
  font-weight: bold;
}

.zx-faq-answer {
  display: none;
  padding: 15px;
  background: #fafafa;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const questions = document.querySelectorAll(".zx-faq-question");

  questions.forEach(q => {
    q.addEventListener("click", function () {
      const answer = this.nextElementSibling;
      answer.style.display =
        answer.style.display === "block" ? "none" : "block";
    });
  });
});
</script>

