{% schema %}
{
  "name": "Just Launch Grid",
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Just Launch Grid",
      "blocks": [
        { "type": "banner" },
        { "type": "banner" },
        { "type": "banner" },
        { "type": "banner" }
      ]
    }
  ]
}
{% endschema %}

<section class="jl-grid-section">
  <div class="jl-grid-wrapper">

    {% for block in section.blocks %}
      <div class="jl-grid-item" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link | default: '#' }}">
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 800 }}" 
              alt="banner"
              loading="lazy">
          {% endif %}
        </a>
      </div>
    {% endfor %}

  </div>
</section>

<style>
.jl-grid-section {
  padding: 40px 60px;
  {% comment %} background: #f5f5f5; {% endcomment %}
}

.jl-grid-wrapper {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px; /* No gap between images */
}

.jl-grid-item {
  overflow: hidden;
}

.jl-grid-item img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 18px;
}

/* Tablet */
@media (max-width: 991px) {
  .jl-grid-section {
    padding: 30px 30px;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .jl-grid-section {
    padding: 20px;
  }

  .jl-grid-wrapper {
    grid-template-columns: repeat(4, 1fr); /* Still 4 in row */
  }

  .jl-grid-item img {
    border-radius: 12px;
  }
}
</style>