<style>
/* ============================= */
/* ===== GENERAL REFINEMENTS === */
/* ============================= */
:root {
  --primary-color: #185E37;
  --accent-color: #2e4d2f;
  --bg-light: #f6f6f6;
  --text-dark: #333;
}

body { margin: 0; font-family: 'Inter', sans-serif; }

.top-bar {
  background: #414217;
  color: #fff;
  font-size: 12px;
  text-align: center;
  padding: 10px 15px;
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* ============================= */
/* ===== STICKY HEADER ========= */
/* ============================= */
.premium-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.header-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 5%;
}

/* ============================= */
/* ===== SEARCH BOX (DESKTOP) == */
/* ============================= */
.header-search input {
  width: 280px;
  padding: 10px 15px;
  border: 1px solid #e0e0e0;
  border-radius: 50px;
  font-size: 13px;
  background: var(--bg-light);
  transition: all 0.3s;
}

.header-search input:focus {
  border-color: var(--primary-color);
  background: #fff;
  box-shadow: 0 0 0 3px rgba(24, 94, 55, 0.1);
}

.header-logo img {
  max-height: 30px;
}

.header-icons {
  display: flex;
  align-items: center;
  gap: 25px;
}

.header-icons a { position: relative; color: var(--primary-color); }

/* ============================= */
/* ===== HAMBURGER SETUP ======= */
/* ============================= */
.menu-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

/* ============================= */
/* ===== DESKTOP NAVIGATION ==== */
/* ============================= */
.desktop-top-nav {
  display: flex;
  justify-content: center;
  gap: 30px;
  {% comment %} padding: 15px 0; {% endcomment %}
  {% comment %} border-top: 1px solid #f9f9f9; {% endcomment %}
  list-style: none;
  margin: 0;
}

.desktop-top-nav > li > a {
  text-decoration: none;
  color: var(--primary-color);
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  transition: 0.3s;
}


.desktop-nav {
