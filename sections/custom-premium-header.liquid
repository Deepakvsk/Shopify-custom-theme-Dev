<style>
/* ============================= */
/* ===== GENERAL REFINEMENTS === */
/* ============================= */
:root {
  --primary-color: #424112;
  --accent-color: #2e4d2f;
  --bg-light: #f8f8f8;
  --text-dark: #222;
  --transition: 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

body { margin: 0; font-family: 'Inter', sans-serif; color: var(--text-dark); }

.top-bar {
  background: #414217;
  color: #fff;
  font-size: 11px;
  text-align: center;
  padding: 8px 15px;
  letter-spacing: 1.2px;
  text-transform: uppercase;
  font-weight: 500;
}

/* ============================= */
/* ===== STICKY HEADER ========= */
/* ============================= */
.premium-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: #ffffff;
  border-bottom: 1px solid #f0f0f0;
}

.header-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 5%;
}

/* ============================= */
/* ===== SEARCH BOX (DESKTOP) == */
/* ============================= */
.header-search input {
  width: 240px;
  padding: 10px 18px;
  border: 1px solid #e8e8e8;
  border-radius: 50px;
  font-size: 13px;
  background: #fff;
  transition: var(--transition);
}

.header-search input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4px rgba(66, 65, 18, 0.05);
  outline: none;
}

.header-logo img {
  max-height: 32px;
  display: block;
}

.header-icons {
  display: flex;
  align-items: center;
  gap: 18px;
}

.header-icons a { position: relative; color: var(--primary-color); display: flex; align-items: center; text-decoration: none; }

/* ============================= */
/* ===== DESKTOP TOP NAV ======= */
/* ============================= */
.desktop-top-nav {
  display: flex;
  justify-content: center;
  gap: 30px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.desktop-top-nav > li > a {
  text-decoration: none;
  color: var(--primary-color);
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 0.8px;
  text-transform: uppercase;
  transition: var(--transition);
}

/* ================================= */
/* ===== HIDDEN SCROLLBAR NAV ====== */
/* ================================= */
.desktop-nav {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  list-style: none;
  margin: 0;
  padding: 0 5%;
  overflow-x: auto; 
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  /* Hide scrollbar for Chrome, Safari and Opera */
  &::-webkit-scrollbar { display: none; }
  /* Hide scrollbar for IE, Edge and Firefox */
  -ms-overflow-style: none;  
  scrollbar-width: none;  
}

.desktop-nav > li {
  position: static;
  padding: 12px 18px;
  flex: 0 0 auto;
}

.desktop-nav > li > a {
  text-decoration: none;
  color: var(--primary-color);
  font-size: 13px;
  font-weight: 500;
  transition: var(--transition);
}

.desktop-nav > li:hover { background-color: #fcfcfc; }

/* ============================= */
/* ===== MEGA MENU CLEANUP ===== */
/* ============================= */
.mega-menu {
  position: absolute;
  left: 0;
  width: 100%;
  background: #ffffff; /* Explicit white */
  top: 100%;
  display: none;
  box-shadow: 0 15px 30px rgba(0,0,0,0.08);
  border-top: 1px solid #f0f0f0;
  padding: 40px 0;
  z-index: 1100;
}

.desktop-top-nav li:hover .mega-menu { display: block; }

.mega-inner {
  max-width: 1100px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
  padding: 0 20px;
}

.mega-column h4 {
  color: var(--primary-color);
  margin-bottom: 12px;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.mega-column a {
  display: block;
  color: #555;
  text-decoration: none;
  font-size: 13px;
  padding: 5px 0;
  transition: 0.2s;
}

.mega-column a:hover { color: var(--primary-color); padding-left: 5px; }

/* ============================= */
/* ===== MOBILE SIDEBAR ======== */
/* ============================= */
.mobile-sidebar {
  position: fixed;
  top: 0;
  left: -100%;
  width: 85%;
  max-width: 320px;
  height: 100%;
  background: #fff;
  z-index: 2000;
  transition: 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  display: flex;
  flex-direction: column;
}

.mobile-sidebar.active { left: 0; }

.sidebar-header {
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sidebar-content {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.sidebar-section-title {
  font-size: 11px;
  text-transform: uppercase;
  color: #999;
  letter-spacing: 1.5px;
  margin-bottom: 15px;
  display: block;
}

.mobile-nav-links { list-style: none; padding: 0; margin: 0 0 30px 0; }

.mobile-nav-links a {
  display: block;
  padding: 12px 0;
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 500;
  font-size: 16px;
  border-bottom: 1px solid #f9f9f9;
}

.sidebar-footer {
  padding: 20px;
  background: #f9f9f9;
}

.menu-toggle {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  display: none;
}

.sidebar-overlay {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.4);
  visibility: hidden; opacity: 0;
  transition: 0.3s; z-index: 1999;
}

.sidebar-overlay.active { visibility: visible; opacity: 1; }

/* ============================= */
/* ===== RESPONSIVE HUD ======== */
/* ============================= */
@media (max-width: 990px) {
  .desktop-nav, .header-search, .desktop-top-nav { display: none; }
  
  .menu-toggle { display: block; }
  
  /* Centralized Logo Position */
  .header-main { 
    padding: 10px 20px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
  }
  
  .header_logo_location_container { 
    grid-column: 2;
  }
  
  .header-icons { 
    grid-column: 3;
    justify-content: flex-end;
  }
  
  .menu-toggle {
    grid-column: 1;
  }
}
</style>

